{
  "name": "SpotCircuit Development Environment",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-typescript-next",
        "dsznajder.es7-react-js-snippets",
        "github.copilot",
        "github.copilot-chat",
        "ms-azuretools.vscode-docker",
        "pflannery.vscode-versionlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "eslint.validate": ["javascript", "typescript", "typescriptreact"],
        "typescript.tsdk": "node_modules/typescript/lib",
        "tailwindCSS.includeLanguages": {
          "typescript": "javascript",
          "typescriptreact": "javascript"
        },
        "tailwindCSS.emmetCompletions": true
      }
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm install && npm install -g vercel@latest",
  "postStartCommand": "npm run dev",
  "postAttachCommand": {
    "vercel-login-check": "bash -c 'if [ ! -f ~/.vercel/auth.json ]; then echo \"\\033[1;33mReminder: Run 'vercel login' to authenticate with Vercel for deployments\\033[0m\"; fi'",
    "server": "npm run dev"
  },
  "remoteUser": "node",
  "hostRequirements": {
    "memory": "8gb"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/node/.vercel/bin"
  },
  "containerEnv": {
    "VERCEL_DIRECTORY_UPLOAD_CONCURRENCY": "10"
  },
  // Additional configuration for Vercel CI/CD
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  // Add VS Code tasks for Vercel deployment workflows
  "portsAttributes": {
    "3000": {
      "label": "Next.js App",
      "onAutoForward": "openPreview"
    }
  }
}